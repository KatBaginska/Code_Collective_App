<div class="container mt-5">
  <%= simple_form_for [@event, @booking] do |f| %>
    <h1>Book <%= @event.name %></h1> <!-- Display the event title as the form title -->

    <div class="form-input">
        <%= f.label :first_name %>
        <p><%= current_user.first_name %></p>
      </div>

      <div class="form-input">
        <%= f.label :email %>
        <p><%= current_user.email %></p>
      </div>

      <div class="form-input">
        <%= f.label :number_of_tickets %>
        <%= f.number_field :number_of_tickets, min: 1, value: 1 %>
      </div>

    <!-- Additional form inputs -->

    <%= f.button :submit, "Book Event",  class: "btn btn-primary"  %>
  <% end %>
