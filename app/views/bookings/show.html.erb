<div class="container mt-5 booking-details-container">
  <div class="d-flex align-items-center">
    <%= link_to "â‡¦", events_path, class: "btn btn-secondary me-3" %>
    <h1 id="booking-headings" class="mb-0">Booking Details</h1>
  </div>
  <br>
  <p id="booking-subtitle"><strong>Event:</strong> <%= @booking.event.name %></p>
  <br>
  <%= cl_image_tag @booking.event.photos[0].key, height: 250, crop: :fill, class: "hero" %>
  <div class="d-flex mt-5">
    <p id="booking-headings"><strong>Description:</strong> <%= @booking.event.description %></p>
  </div>

  <div class="d-flex align-items-center mt-5">
    <p id="booking-headings"><strong> Date:</strong> <%= @booking.event.start_time.strftime("%A %d %B %Y")%> </p>
    <p id="booking-headings"><strong> Start Time:</strong> <%= @booking.event.start_time.strftime("%H:%M")%> </p>
    <p id="booking-headings"><strong> End Time:</strong> <%= @booking.event.end_time.strftime("%H:%M")%> </p>
  </div>
  <div class="d-flex align-items-center mt-5">
    <p id="booking-headings"><strong>Tickets:</strong> <%= @booking.number_of_tickets %></p>
    <p id="booking-headings"><strong>Confirmed:</strong> <%= 'Yes' %></p>
    <p id="booking-headings"><strong>User:</strong> <%= @booking.user.email %></p>
  </div>
  <div class="booking-links justify-content-start mt-3">
    <%= link_to "Delete", booking_path(@booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking?" }, class: "btn btn-danger" %>
    <%= link_to "View your events", bookings_path, class: "btn btn-secondary" %>
      <% if current_user.bookings.where(event: @booking.event) %>
        <%= link_to event_chatroom_path(@booking.event), class: "btn btn-secondary" do %>
        <i class="far fa-comment-alt"></i>
        <% end %>
      <% end %>
  </div>
</div>
