<div class="card-container container mt-5" id="booking-page">
  <% if @upcoming_bookings.any? %>
    <div>
      <h1 class="your-bookings">Your Events</h1>
      <div class="separator"></div>
      <h5 class="subtitle">Looking forward to seeing you there!</h5>
    </div>
    <div class="row row-cols-1 row-cols-md-3 mt-3">
      <% @upcoming_bookings.each do |booking| %>
      <div class="col mb-4">
        <div class="card event-card">
          <%= cl_image_tag booking.event.photos[0].key, height: 250, crop: :fill, class: "castle-image" %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to booking.event.name, booking_path(booking), class: "event-link" %></h5>
            <p class="card-text"><%= booking.event.location %></p>
            <p class="card-text"><%= booking.event.date.strftime("%A %d %B %Y") %> | <%= booking.event.start_time.strftime("%H:%M") %></p>
          </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>You have no bookings.</p>
    <%= link_to "Browse events", events_path, class: "btn btn-secondary" %>
  <% end %>
  <br>
  <br>
  <br>
  <div>
    <h1 class="your-bookings">Your Events History</h1>
    <div class="separator"></div>
    <% if @past_bookings.any? %>
      <h5 class="subtitle">Hope you enjoyed the event!</h5>
      <div class="cards-events">
        <% @past_bookings.each do |booking| %>
          <div class="event-card">
            <%= cl_image_tag booking.event.photos[0].key, height: 250, crop: :fill, class: "castle-image" %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to booking.event.name, booking_path(booking), class: "event-link" %></h5>
              <p class="card-text"><%= booking.event.location %></p>
              <p class="card-text"><%= booking.event.date.strftime("%d/%m/%Y") %> | <%= booking.event.start_time.strftime("%H:%M") %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <h5 class="subtitle">Your events history is empty</h5>
      <%= link_to "Browse events", events_path, class: "btn btn-secondary" %>
    <% end %>
    </div>
  </div>
</div>
