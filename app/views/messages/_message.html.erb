<div id="message-<%= message.id %>">
  <% if message.user.photo.present? %>
    <%= cl_image_tag message.user.photo.key, class: "avatar", alt: "Profile image" %>
  <% else %>
    <img src="default_profile_image_url" class="profile-image" alt="Default profile image">
  <% end %>
  <div class="message-content">
    <small>
      <strong><%= message.user.username %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </small>
    <p><%= message.content %></p>
  </div>
</div>
